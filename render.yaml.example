services:
  - type: web
    name: ai-job-scraper
    env: python
    plan: free
    buildCommand: pip install -r requirements.txt
    startCommand: gunicorn -w 2 -b 0.0.0.0:$PORT app:app
    envVars:
      - key: FLASK_ENV
        value: "production"
      - key: MONGO_URI
        value: "mongodb+srv://<username>:<password>@<cluster>.mongodb.net"
      - key: DB_NAME
        value: "ai_job_scraper"
      - key: OPENAI_API_KEY
        value: "sk-<your-openai-key>"
      - key: PORT
        value: "5000"
